<!--         android:id="@+id/imageView_bulb" -->
<!--         android:layout_width="220sp" -->
<!--         android:layout_height="120sp" -->
<!--         android:src="@drawable/rotate_anticlockwise1" /> -->

</LinearLayout> <!-- </ScrollView> -->
